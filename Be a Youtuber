-- ============================
-- MINIMISATION FLUIDE
-- ============================
local minimized = false
MinimizeBtn.MouseButton1Click:Connect(function()
    minimized = not minimized
    local targetSize = minimized and UDim2.new(0, 260, 0, 45) or UDim2.new(0, 260, 0, 400)
    
    TweenService:Create(MainFrame, TweenInfo.new(0.4, Enum.EasingStyle.Quart, Enum.EasingDirection.Out), {Size = targetSize}):Play()
    
    -- Fade out/in du contenu
    for _, item in pairs({Container, Footer}) do
        item.Visible = true
        TweenService:Create(item, TweenInfo.new(0.2), {GroupTransparency = minimized and 1 or 0}):Play()
    end
    
    MinimizeBtn.Text = minimized and "+" or "âˆ’"
    task.wait(0.2)
    if minimized then Container.Visible = false; Footer.Visible = false end
end)

